<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8DDF1"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SignInTenant">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SignInTenantTextId"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/username"
        android:background="@drawable/edit_round"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Email"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"/>

    <EditText
        android:id="@+id/SignInTenantPasswordId"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/password"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background" />

    <Button
        android:id="@+id/SignInTenantButtonId"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/sign_in_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/SignUpTenantTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:text="@string/textview_user_signup"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/tenantProgressId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>